    <LinearLayout
        android:id="@+id/lvl_outofstock"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:background="@color/colorTranfar"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:rotation="315"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_marginTop="9dp"
            android:padding="5dp"
            android:text="Sold Out"
            android:textColor="@color/colorRad"
            android:textSize="15sp" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="4dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/outofstock_red"
            android:gravity="center|right"
            android:padding="5dp"

            android:text="  Out of Stock  "
            android:textColor="@color/colorWhite"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lvl_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/offer_green"
            android:gravity="center|right"
            android:padding="5dp"
            android:text="10 % off"
            android:textColor="@color/colorWhite"
            android:textSize="10dp" />
    </LinearLayout>

